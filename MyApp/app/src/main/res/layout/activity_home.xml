<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/home"
    tools:context="com.bwie.myapp.activity.HomeActivity">

    <ImageButton
        android:id="@+id/home_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/left"
        android:layout_marginTop="@dimen/x10"
        android:layout_marginLeft="@dimen/x5"
        android:background="@null"/>
    <ImageView
        android:layout_width="@dimen/x100"
        android:layout_height="@dimen/x100"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/y30"
        android:src="@mipmap/top"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y30"
        android:layout_marginLeft="@dimen/x70"
        android:layout_marginRight="@dimen/x70"
        android:layout_marginTop="@dimen/y100"
        android:background="@drawable/weixin_background">
        <Button
            android:id="@+id/wx_login"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_centerHorizontal="true"
            android:drawableLeft="@mipmap/wx"
            android:textSize="20sp"
            android:textColor="#fff"
            android:text="微信登录" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/y4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y30"
        android:background="@drawable/qq_background"
        android:layout_marginLeft="@dimen/x70"
        android:layout_marginRight="@dimen/x70">
        <Button
            android:id="@+id/qq_login"
            android:layout_marginTop="@dimen/y5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@null"
            android:layout_centerHorizontal="true"
            android:drawableLeft="@mipmap/qq"
            android:textSize="20sp"
            android:textColor="#fff"
            android:text="QQ登录"/>
    </RelativeLayout>

    <Button
        android:id="@+id/other_login"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="其他登录方式"
        android:textColor="#fff"
        android:textSize="18sp"
        android:background="@null"/>
</LinearLayout>
