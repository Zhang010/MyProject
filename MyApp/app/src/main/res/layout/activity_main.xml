<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.bwie.myapp.activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y30"
        android:background="#03A9F4"
        android:orientation="horizontal">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/icon1"
            android:layout_width="@dimen/x30"
            android:layout_height="@dimen/x30"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x10"
            app:roundAsCircle="true"/>
        <TextView
            android:id="@+id/title"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="#fff"
            android:layout_marginTop="@dimen/y5"
            android:text="推荐"/>
        <ImageView
            android:id="@+id/icon2"
            android:layout_width="@dimen/x25"
            android:layout_height="@dimen/x25"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginLeft="@dimen/x10"
            android:src="@mipmap/raw_1500034665"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/frame"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </FrameLayout>
    <RadioGroup
        android:id="@+id/rg"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/recommend"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawableTop="@drawable/recommend"
            android:text="推荐"
            android:textSize="20sp"
            android:checked="true"
            android:textColor="@drawable/textcolor" />
        <RadioButton
            android:id="@+id/an_episode"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:text="段子"
            android:textSize="20sp"
            android:textColor="@drawable/textcolor"
            android:drawableTop="@drawable/an_episode"/>
        <RadioButton
            android:id="@+id/vedio"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:text="视频"
            android:textColor="@drawable/textcolor"
            android:textSize="20sp"
            android:drawableTop="@drawable/video"/>
    </RadioGroup>

</LinearLayout>
