<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background"
    tools:context="com.bwie.myapp.activity.LoginActivity">

    <RelativeLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/login_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/left"
            android:background="@null"/>
        <TextView
            android:id="@+id/register_new"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册账号"
            android:textColor="#fff"
            android:textSize="18sp"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x90"
        android:layout_width="@dimen/x100"
        android:layout_height="@dimen/x100"
        android:src="@mipmap/top"
        android:radius="@dimen/x10"/>
    <LinearLayout
        android:id="@+id/ll"
        android:layout_below="@+id/iv1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/et_background"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginRight="@dimen/x40"
        android:layout_marginTop="@dimen/x30">
        <EditText
            android:id="@+id/login_phone"
            android:layout_width="@dimen/x320"
            android:layout_height="@dimen/y30"
            android:layout_marginRight="@dimen/x15"
            android:layout_marginLeft="@dimen/x15"
            android:background="@null"
            android:hint="账号"
            android:textSize="18sp"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginRight="@dimen/x15"
            android:layout_marginLeft="@dimen/x15"
            android:background="#335854"/>
        <EditText
            android:id="@+id/login_pwd"
            android:layout_width="@dimen/x320"
            android:layout_height="@dimen/y30"
            android:layout_marginRight="@dimen/x15"
            android:layout_marginLeft="@dimen/x15"
            android:password="true"
            android:background="@null"
            android:textSize="18sp"
            android:hint="密码"/>

    </LinearLayout>

    <Button
        android:layout_below="@+id/ll"
        android:id="@+id/bt_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x40"
        android:layout_marginRight="@dimen/x40"
        android:layout_marginTop="@dimen/x30"
        android:background="@drawable/register_bt_round"
        android:textColor="#fff"
        android:textSize="18sp"
        android:text="登陆"/>
    <Button
        android:id="@+id/forget_pwd"
        android:layout_below="@+id/bt_login"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/x40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码"
        android:textSize="16sp"
        android:background="@null"
        android:textColor="#fff"/>

    <Button
        android:id="@+id/login_tourist_login"
        android:layout_marginTop="@dimen/x40"
        android:layout_below="@+id/forget_pwd"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="游客登录"
        android:textSize="16sp"
        android:background="@null"
        android:textColor="#fff"/>
</RelativeLayout>
